@model List<Raca>

<h3>Lista de Raças</h3>

<div class="row mb-2">
    <div class="text-end">
        <a asp-action="cadastrar" class="btn btn-primary">Cadastrar</a> <!--TODO Amanda-->
    </div>
</div>

<table class="table table-striped table-bordered">
    <!--Cabeçalho da tabela -->
    <thead>
        <!--Linha da tabela-->
        <tr>
            <!-- Coluna específica do cabeçalho-->
            <th>Código</th>
            <th>Nome</th>
            <th>Espécie</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <!--Lugar dos registros da tabela-->
        @foreach (var raca in Model)
        {
            <!--Linha-->
            <tr>
                <!--Coluna específica para body-->
                <td>@raca.Id</td>
                <td>@raca.Nome</td>
                <td>@raca.Especie</td>
                <td>
                    <a asp-action="editar" asp-route-id="@raca.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="@raca.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>