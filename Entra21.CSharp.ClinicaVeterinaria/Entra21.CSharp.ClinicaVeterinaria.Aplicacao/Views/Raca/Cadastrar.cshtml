        <span asp-validation-for="Nome" class="text-danger"></span> <!--TODO Amanda-->
    </div>

    <div class="mb-3">
        <label asp-for="Especie" class="form-label"></label> <!--TODO Amanda--> 
        <select asp-for="Especie" asp-items="selectDasEspecies" class="form-select"></select> <!--TODO Amanda--> 
